<%- layout("./layouts/boilerplate") %> 
  
<div class="container offset-2 mt-4">
    <div class="mt-3 mb-4 ">
        <div class="title "><b>Titile:</b><%=blog.title%></div>
   <div class="text-muted"> <%=blog.createdAt.toDateString()%></div>
   
   <div class="d-flex mb-4 mt-4 ">
   <a href="/blogs" class="btn btn-secondary mt-2 me-3 all">All Blogs</a>
    <a href="/blogs/<%=blog._id%>/edit " class="btn btn-primary mt-2 me-3 ">Edit</a>
    
    <div class="mt-2">
    <form method="post" action="/blogs/<%=blog._id%>?_method=Delete">
        <button class="btn btn-danger me-2">Delete</button>
    </form>
    </div>
</div>
    <div class="text mt-3 "><%=blog.content%></div>
    <div class="text mt-3">Author:<%=blog.author%></div>

</div>
</div>